FROM node:22-alpine

WORKDIR /app

# First copy package files for better caching
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Set SSE as the default transport
ENV NODE_ENV=production
ENV TRANSPORT=sse
ENV PORT=3000

# Build the application
RUN npm run build

# Expose the port for the SSE server
EXPOSE 3000

# Run the server
CMD ["node", "dist/index.js"]